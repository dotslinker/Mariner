                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:onClick="HourlyUpdateButton"
                        android:text="Hourly Update" />

                    <Button
                        android:id="@+id/daily_update_button"
