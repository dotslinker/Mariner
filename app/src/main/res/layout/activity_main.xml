                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:onClick="ToggleViewButton"
                        android:text="Toggle View"/>



                </TableRow>
                <TableRow>



                </TableRow>

            </TableLayout>
        </TableRow>

